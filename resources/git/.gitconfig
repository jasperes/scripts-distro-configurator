[core]
    editor = vim
[alias]
    cb = checkout -b
    co = checkout
    ci = commit -m
    st = status -s
    br = branch
    pl = pull --rebase
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
    resetALL = reset HEAD . && git checkout .

[push]
	default = simple
